---
import { Particles } from "@/components/magicui/particles";
import "../styles/global.css";
import Footer from "@/components/footer/Footer.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/icon/favicon
		.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="relative dark:bg-neutral-900 dark:text-gray-100 bg-gray-100 text-gray-900 transition-color duration-800 overflow-x-hidden"
  >
<Particles
className="absolute inset-0"
client:idle
/>
    <slot />
<Footer/>
  </body>
</html>

<style is:global></style>
