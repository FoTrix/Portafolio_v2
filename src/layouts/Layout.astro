---
import "../styles/global.css";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/icon/favicon
		.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="dark:bg-neutral-800 dark:text-gray-100 bg-gray-100 text-gray-900 transition-color duration-800 min-h-screen"
  >
    <slot />
    <footer
      class="mt-auto h-70 bg-gradient-to-tr from-blue-900/30 via-purple-900/20 to-pink-900/20 dark:from-neutral-900/80 dark:via-neutral-800/90 dark:to-neutral-700/90 py-2 px-4 sm:px-6 lg:px-8 border-t border-opacity-20 border-gray-400 dark:border-neutral-600"
    >
      <div class="max-w-6xl mx-auto">
        <div
          class="grid grid-cols-1 gap-8 place-items-center text-center"
        >
          <div class="grid">
            <h3 class="text-lg font-bold mb-4 text-primary dark:text-blue-300">
              Legal
            </h3>
            <p class="text-sm opacity-75">
              Â© 2025 FoTrixOfficial. Todos los derechos reservados.
            </p>
            <p class="text-xs mt-2 mb-3 opacity-60">
              Desarrollado con Astro + React + Tailwind CSS
            </p>
            <p class="text-xs opacity-60 hover:opacity-100 transition-opacity">
              <a href="https://github.com/FoTrix/Portafolio_v2" target="_blank" rel="noopener" class="underline">
                Ver repositorio en GitHub
              </a>
            </p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global></style>
