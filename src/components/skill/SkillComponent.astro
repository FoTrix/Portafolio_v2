---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
}

const { icon } = Astro.props;
---

<article
  class="grid h-14 w-14 sm:h-20 sm:w-20 z-10 place-items-center p-1.5 sm:p-3 rounded-xl relative shadow-lg border border-gray-300/60 dark:border-neutral-800/60 bg-gradient-to-br from-gray-100/90 via-gray-200/80 to-gray-200/60 dark:from-neutral-900/90 dark:via-neutral-800/80 dark:to-neutral-900/60 hover:scale-105 transition-transform duration-300"
>
  <div
    class="absolute -z-10 inset-0 rounded-xl dark:bg-neutral-900/80 bg-gray-100 blur-sm"
  >
  </div>
  <Icon name={icon} size={"full"} class="text-accent drop-shadow-md" />
</article>
